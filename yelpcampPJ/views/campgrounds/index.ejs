<% layout("layouts/boilerplate") %>
<div id="cluster-map"></div>
<h1>All Campgrounds</h1>
<div>
    <a href="/campgrounds/new">Add Campgrounds</a>
</div>
<% for(let campground of campgrounds) {%>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <% if(campground.images.length) { %>
                <img crossorigin="anonymous" class="img-fluid" src="<%= campground.images[0].url %>" alt="">
                <% } else { %>
                <img crossorigin="anonymous" class="img-fluid" src="https://images.unsplash.com/photo-1537565266759-34bbc16be345?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1770&q=80" alt="">
                <% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= campground.title %></h5>
                    <p class="card-text"><%= campground.description %></p>
                    <p class="card-text">
                        <small class="text-secondary"><%= campground.location %></small>
                    </p>
                    <a class="btn btn-primary" href="/campgrounds/<%= campground._id %>">View <%= campground.title %></a>
                </div>
            </div>
        </div>
    </div>
<% } %>

<script>
    // punlic/showPageMap.js => show.ejs
    const mapToken = "<%- process.env.MAPBOX_TOKEN %>";
    // campground 주소를 받기 위한 코드
    const campgrounds = {features: <%- JSON.stringify(campgrounds) %>};
</script>
  
<script src="/js/clusterMap.js"></script>